<view class="login_box"><view class="text_login"><image class="login_logo" src="../../static/logo/orange.png" alt></image><view class="login_phone"><text>手机号</text><input type="text" maxlength="11" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/></view><view class="login_code"><text>验证码</text><input type="text" maxlength="4" data-event-opts="{{[['input',[['__set_model',['','code','$event',[]]]]]]}}" value="{{code}}" bindinput="__e"/><view hover-class="touchOpacity" data-event-opts="{{[['tap',[['getCode',['$event']]]]]}}" bindtap="__e">{{str}}</view></view><view class="login_but" hover-class="touchOpacity" data-event-opts="{{[['tap',[['login',['$event']]]]]}}" bindtap="__e"><text space="ensp">登    录</text></view></view></view>